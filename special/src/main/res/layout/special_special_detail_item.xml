<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/itemImg"
        android:layout_width="160dp"
        android:background="#f0eff5"
        android:scaleType="centerCrop"
        android:layout_height="108dp" />
    <TextView
        android:id="@+id/itemTittle"
        android:textSize="14sp"
        android:textColor="#333333"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/itemImg"
        android:layout_alignTop="@id/itemImg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@id/itemImg"
        android:layout_toRightOf="@id/itemImg"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemTime"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textColor="#777777"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/itemViewNum"
            android:textColor="#777777"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:text="1.2"
            android:drawableLeft="@drawable/ic_views"
            android:gravity="center"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#eeeeee"
        android:layout_below="@id/itemImg"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>