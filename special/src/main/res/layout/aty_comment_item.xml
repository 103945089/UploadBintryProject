<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemIcon"
        android:src="@drawable/ic_touxiang_ph"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp" />
    <TextView
        android:id="@+id/itemName"
        android:textSize="14sp"
        android:layout_toRightOf="@id/itemIcon"
        android:layout_alignTop="@id/itemIcon"
        android:layout_marginLeft="7dp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/itemTime"
        android:textSize="13sp"
        android:textColor="#999999"
        android:layout_below="@+id/itemContnet"
        android:layout_alignLeft="@+id/itemContnet"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/itemContnet"
        android:textSize="15sp"
        android:textColor="#333333"
        android:layout_alignLeft="@id/itemName"
        android:layout_below="@id/itemName"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#dddddd"
        android:layout_alignLeft="@id/itemName"
        android:layout_below="@id/itemTime"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/btZan"
        android:text="èµž"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textColor="#666666"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_praise_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>